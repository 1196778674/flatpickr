$calendar_background = #fff
$calendar_border_color = #eee

$months_color = #3c3f40
$months_background = transparent

$weekdays_background = transparent
$weekdays_color = #757575

$day_text_color = #404848
$day_hover_background_color = #e9e9e9
$disabled_border_color = $day_hover_background_color

$disabled_day_color = alpha(black, 0.15)

$today_color = #F64747
$today_fg_color = #fff

$selected_day_background =  #4f99ff
$selected_day_color = #fff

@require "../flatpickr"

.flatpickr-calendar
	width $daysWidth

.flatpickr-days
	padding 0
	border-right 0

span.flatpickr-day
	border-radius 0 !important
	border 1px solid $day_hover_background_color
	margin -1px 0px 0 -1px
	width calc(14.28571% + 1px)
	flex-basis calc(14.28571% + 1px)
	max-width none
	font-weight 400

	&:nth-child(7n)
		border-right 0


	&:nth-child(n+36)
		border-bottom 0

	&.today:not(.selected)
		border-color transparent
		border-bottom 1px solid $today_color

	&.today, &.selected
		z-index 2

.flatpickr-weekwrapper span.flatpickr-day
	border 0
	margin-top -1px

.hasWeeks .flatpickr-days
	border-right 0
